#include <stdio.h>
int main()
{
    int n,s,t=1;
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        s=t;
        for(int j=1;j<=n;j++)
        {
            if(i+j<=1+n)
            {
                printf("%d",s);
                s++;
            }
            else
            {
                printf(" ");
            }
        }
        printf("\n");
        t++;
    }
}
