#include <stdio.h>
int main()
{
    int n,s,t=1;
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=n;j++)
        {
            if(j==1 || j==n || i==1 || i==n)
                printf("* ");
            else
                printf("  ");
        }
        printf("\n");
        for(int k=1;k<=i;k++)
        {
            printf("  ");
        }
    }
}
