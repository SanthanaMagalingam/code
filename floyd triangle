#include <stdio.h>
int main()
{
    int n,s=1,t=1,x=1;
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        t=x+i;
        for(int j=1;j<=i;j++)
        {
            if(i%2!=0)
            {
                x=s;
                printf("%d ",x);
                s++;
            }
            else
            {
                printf("%d ",t);
                s++;
                t--;
            }
        }
        printf("\n");
    }

}
